@using System.Web.Optimization;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Simple Bolg Admin</title>
    @Styles.Render("~/admin/styles")
</head>
<body>
    
    <div class="container">
        <ul class="nav nav-tabs">
            <li class="nav-item">@Html.ActionLink("Posts","index","Post",new { area = "admin" },new {@class="nav-link" } )</li>
            <li class="nav-item">@Html.ActionLink("Users", "index", "User", new { area = "admin" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.RouteLink("Back to Website","Home",new { }, new { @class = "nav-link" })</li>

        </ul>

        @RenderBody()
    </div>
   

    
    @Scripts.Render("~/admin/scripts")
   @RenderSection("Scripts", false)
    

    <form class="hidden" id="anti-forgery-form">
        @Html.AntiForgeryToken()
    </form>
</body>
</html>
