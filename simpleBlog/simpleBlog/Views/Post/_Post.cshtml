@model simpleBlog.Models.Post

<article class="post">
    <h1><a href="@Url.RouteUrl("Post",new { id =Model.PostId,slug = Model.Slug})">@Model.Title</a></h1>
    <div>
        @Html.Raw(Model.Content)
    </div>
    <footer>
        <ul class="float-right list-unstyled tags">
            @foreach (var tag in Model.Tags)
            {
                <li>
                    <a class="badge badge-secondary" href="@Url.RouteUrl("Tag", new { id = tag.TagId,slug = tag.Slug})">@tag.Name</a>
                </li>
            }
        </ul>
        Posted: @((int)(DateTime.UtcNow - Model.CreatedAt).TotalMinutes) minutes ago
    </footer>
</article>
 
